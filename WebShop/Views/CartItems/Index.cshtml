@model IEnumerable<WebShop.Models.CartItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal sum = 0;
    decimal amount = 0;
}

<div class="row">
    <div class="col-3">
        <h1>Ваш Кошик</h1>
    </div>
    <div class="col-9"><h1 id="sum"></h1></div>
</div>


<table class="table">
    <thead>
        <tr>
            <th style="width: 20%"></th>
            <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
            <th class="text-right" style="width: 12%">Ціна</th>
            <th class="text-right" style="width: 12%">Кількість</th>
            <th class="text-right" style="width: 12%">Вартість</th>
            <th style="width: 30%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            amount = (item.Product.Price * item.Quantity);
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Product.Image)" alt="." style="width: 75%; border-radius: 5px" />
                </td>
                <th>@Html.DisplayFor(modelItem => item.Product.Name)</th>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td class="text-right">
                    @item.Quantity
                </td>
                <td class="text-right">
                    @amount
                </td>
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@item.Id">Змінити кількість</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
            sum += amount;
        }
    </tbody>
</table>

<div>
    <a asp-area="" asp-controller="Products" asp-action="Index">Повернутися до списку продуктів</a>
</div>


@section scripts
    {
    <script>
        $(document).ready(() => {
            var total = $('#sum');
            total.text(`вартість товарів: @sum`);
            total.css('text-align', 'right');
        });
    </script>
}
