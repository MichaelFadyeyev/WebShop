@model WebShop.Models.CartItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Видалення товару</h1>

<h3>Видалити "<strong>@Model.Product.Name</strong>" з кошика?</h3>
<div>
    <hr />
    <dl class="row">
        <div class="col-md-4"> 
            <img src="@Model.Product.Image" alt="." class="card-img label-img" />
            <dt class = "col-md-6">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class = "col-md-6">
                @Html.DisplayFor(model => model.Product.Name)
            </dd class>
            <dt class = "col-md-6">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class = "col-md-6">
                @Html.DisplayFor(model => model.Quantity)
            </dd class>
        </div>
        <div  class="col-md-8">
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити товар" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися у кошик</a>
    </form>
</div>
